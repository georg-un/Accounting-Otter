    <persistence-unit name="pers_unit_test" transaction-type="RESOURCE_LOCAL">

        <class>User</class>
        <class>Transaction</class>
        <class>Debit</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" /> <!-- DB Driver -->
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/test_database" /> <!-- BD Mane -->
            <property name="javax.persistence.jdbc.user" value="accounting_otter" /> <!-- DB User -->
            <property name="javax.persistence.jdbc.password" value="otter" /> <!-- DB Password -->

            <property name="hibernate.show_sql" value="false" /> <!-- Show SQL in console -->
            <property name="hibernate.format_sql" value="true" /> <!-- Show SQL formatted -->
            <property name="org.hibernate.dialect" value="PostgreSQLDialect"/>

            <!-- connection pooling -->
            <property name="hibernate.c3p0.min_size" value="5" />
            <property name="hibernate.c3p0.max_size" value="20" />
            <property name="hibernate.c3p0.timeout" value="500" />
            <property name="hibernate.c3p0.max_statements" value="50" />
            <property name="hibernate.c3p0.idle_test_period" value="2000" />
        </properties>

    </persistence-unit>

</persistence>