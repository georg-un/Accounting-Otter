<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="otter_database" transaction-type="RESOURCE_LOCAL">

        <class>at.accounting_otter.entity.User</class>
        <class>at.accounting_otter.entity.Transaction</class>
        <class>at.accounting_otter.entity.Debit</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" /> <!-- DB Driver -->
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/accounting_otter" /> <!-- BD Mane -->
            <property name="javax.persistence.jdbc.user" value="accounting_otter" /> <!-- DB User -->
            <property name="javax.persistence.jdbc.password" value="otter" /> <!-- DB Password -->

            <property name="hibernate.show_sql" value="true" /> <!-- Show SQL in console -->
            <property name="hibernate.format_sql" value="true" /> <!-- Show SQL formatted -->
        </properties>

    </persistence-unit>

</persistence>